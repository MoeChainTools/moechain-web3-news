{
  "name": "moechain-web3-news",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bunx pm2 start 'bun run src/index.ts' --name moechain-web3-news",
    "dev:worker": "wrangler dev src/worker.ts",
    "deploy:worker": "wrangler deploy src/worker.ts",
    "build:linux": "bun build --compile --target=bun-linux-x64 --minify  --bytecode ./src/index.ts --outfile moechain-web3-news-linux",
    "build:mac": "bun build --compile --target=bun-macos-x64 --minify  --bytecode ./src/index.ts --outfile moechain-web3-news-mac",
    "build:win": "bun build --compile --target=bun-windows-x64 --minify  --bytecode ./src/index.ts --outfile moechain-web3-news-win"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250509.0",
    "@types/bun": "latest",
    "wrangler": "^4.14.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "loglevel": "^1.9.2",
    "rss-parser": "^3.13.0"
  }
}